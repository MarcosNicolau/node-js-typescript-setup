{
	"name": "node-js-typescript-setup",
	"author": "myself",
	"version": "1.0.0",
	"description": "This is the common configuration for node js project with typescript I always do",
	"license": "ISC",
	"private": true,
	"main": "./dist/src/index.js",
	"types": "./dist/src/index.d.ts",
	"files": [
		"dist"
	],
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"tag": "latest"
	},
	"scripts": {
		"start": "node  -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/server",
		"dev": "nodemon -r tsconfig-paths/register  ./src/server.ts",
		"build": "tsc",
		"prepare": "husky install",
		"test": "jest",
		"cm": "cz",
		"setup": "rm -rf .git && git init && npx npm-check-updates -u && yarn && husky install && commitizen init cz-conventional-changelog --yarn --dev --exact"
	},
	"dependencies": {
		"express": "^4.17.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "^4.17.28",
		"@types/jest": "^27.4.1",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "3.3.0",
		"devmoji": "^2.3.0",
		"eslint": "^8.12.0",
		"eslint-plugin-import": "^2.25.4",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.7",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.1",
		"semantic-release": "^19.0.2",
		"ts-jest": "^27.1.4",
		"ts-node": "^10.7.0",
		"tsconfig-paths-jest": "^0.0.1",
		"typescript": "^4.6.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
